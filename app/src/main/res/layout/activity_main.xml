<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true">


        <Button
            android:id="@+id/horse"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/horse"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#2F4F4F"
            android:layout_marginEnd="5dp"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#FAEBD7" />

        <Button
            android:id="@+id/cat"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/cat"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#2F4F4F"
            android:layout_marginEnd="5dp"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#00CED1"/>

        <Button
            android:id="@+id/turtle"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/turtle"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#2F4F4F"
            android:layout_marginEnd="5dp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#DCDCDC"/>

        <Button
            android:id="@+id/giraffe"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/giraffe"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:textColor="#2F4F4F"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#DEB887"/>

        <Button
            android:id="@+id/butterfly"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/butterfly"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#2F4F4F"
            android:layout_marginEnd="5dp"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#F0E68C"/>

        <Button
            android:id="@+id/bear"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="@string/bear"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#2F4F4F"
            android:layout_marginEnd="5dp"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="buttonPressed"
            android:backgroundTint="#ADD8E6"/>

    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>